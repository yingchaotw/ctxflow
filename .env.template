# .env template file
# This file is located in the parent directory of the application

# Central Weather Bureau Open Data API (CWA Open Data)
# API documentation: https://opendata.cwa.gov.tw/api/v1/rest/datastore/E-A0016-001?Authorization=CWA-78CD69B2-5141-4A1A-BA1D-EAEC7DA8A1A3
CWA_API_KEY=your_cwa_api_key_here   # Replace with your actual CWA API key

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here  # Replace with your actual OpenAI API key

# Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here  # Replace with your actual Gemini API key

# DeepSeek API Key
DEEPSEEK_API_KEY=your_deepseek_api_key_here  # Replace with your actual DeepSeek API key


# Define the external URL of your n8n instance (used for OAuth2 callback)
# Use "http://localhost:5678" for local development.
# For remote or networked deployments, replace with "http://<your-ip-or-domain>:5678"
N8N_HOST=localhost                          # n8n hostname
N8N_PORT=5678                               # n8n port

# n8n Basic Authentication settings
N8N_BASIC_AUTH_USER=your_username_here      # Replace with your n8n username for basic auth
N8N_BASIC_AUTH_PASSWORD=your_password_here  # Replace with your n8n password for basic auth
N8N_SECURE_COOKIE=false                     # Set to true to enable secure cookies for n8n
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true  # Set to true to enforce file permissions for settings
N8N_DEPLOYMENT_TYPE=community               # Deployment type (community or enterprise)

# MCP Server configuration
MCP_SERVER_PORT=8000                        # Port for the MCP server to listen on
